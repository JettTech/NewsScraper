      <!-- ////////////// START THE "Section White" SECTION Here - TEXT PORTION OF PAGE BODY ////////////// -->
      <div class="section white">
        <div class="row container">         
          <div class="col s12">
             <h3 class="header center-align"><strong>Articles</strong></h3>
             <hr/> 
             <br/>
          </div>
          
          <!-- ////////////// Card BODY STARTS HERE!! //////////////-->
          {{#each Article_data}} <!-- !! make sure this is the correct object name to call !! -->

            <div class="col s10 offset-s1">
              <div class="card">
                <div class="card-image waves-effect waves-block waves-light">
                  <img id="articleImg" class="activator" src= {{this.img}}> <!-- DEFAULT: "/public/images/exampleNewImg.jpg" -->
                </div>
                <!-- Card AbbrvContent!! -->
                <div class="card-content">
                  <span id="articleTitle" class="card-title activator grey-text text-darken-4">{{this.title}} - Card Title<i class="material-icons right">more_vert</i></span>
                  <!-- <p>{{this.descriptionShort}} - Short Desription </p> -->
                  <p><a href="{{this.link}}" - Link to the article source.</a></p>
                </div>
                <!-- END of Card AbbrvContent!! -->

                <!-- Main Card Content (Card Reveal Content)!! -->
                <div class="card-reveal">
                  <span id="ExpandArtTitle" class="card-title grey-text text-darken-4"><h5><strong> {{this.title}} - Card Title</strong></h5><i class="material-icons right close">close</i></span>
                  <h6 id="articleDescription"> {{this.descriptionFull}} - Article Description.</h6>
                  <br/>
                  <hr/>
                  <h5><strong>Comments:</strong></h5>
                  {{#if this.notes}}
                  
                    <p>{{this.0.notes}}</p> 
                    <p>{{this.1.notes}}</p>
                    <p>Wish to see more comments, or even add your own?  Click on the "edit" button to your right to view additional a comment and/or share your note.</p>
                        
                  {{else}}

                    <p>Be the first to comment.  Click on the "edit" button to your right and share your thoughts!!</p>>

                  {{/if}}

                 <!--  Card Buttons >> add quote/delete -->
                  <div id="editNoteModal" class="fixed-action-btn horizontal">
                    <a class="btn-floating btn-large red">
                      <i class="large material-icons">mode_edit</i>
                    </a>
                  </div>
                  <!--  End of Card Buttons -->
                </div>
                <!-- End of Card Reveal Content! -->
              </div>       
            </div>

          {{/each}} 

          <!-- /////// Card BODY ENDS HERE!! /////// -->
        </div>
      </div>
      <!-- ////////////// "Section White" ENDS HERE!! ////////////// -->
