  <!--editNoteModal: Modal Structure -->
      <!--  ==================================================================- -->
          <div id="editNoteModal" class="modal">
            <div class="modal-content">
              {{#with (Article_id) as |Article|}} <!-- /locate the article's id... find a way to automaote -->


                <h3> {{this.title}} - Article Notes!</h3>
                <hr/>

                <div class="row">
                  <form class="col 12">
                    <div class="row">
                      <div class="input-field col s6">
                        <i class="material-icons prefix">account_circle</i>
                        <input id="icon_prefix" type="text" class="validate">
                        <label id="noteAuthor" for="icon_prefix" data-error="Don't forget to type in your name." data-success="Pleased to meet you!">First Name</label>
                      </div>
                      <div class="input-field col s6">
                        <i class="material-icons prefix">title</i>
                        <input id="icon_title" type="text" class="validate">
                        <label id="noteTitle" for="icon_telephone" data-error="Please enter in your Note Tile." data-success="Looks nice!">Title</label>
                      </div>
                    </div>
                    <div class="row">
                      <form class="col s12">
                        <div class="row">
                          <div class="input-field col s6">
                            <i class="material-icons prefix">mode_edit</i>
                            <textarea id="icon_prefix2" class="materialize-textarea"></textarea>
                            <label id="newNote" for="icon_prefix2">Your Note</label>
                          </div>
                        </div>
                      </form>
                    </div>
                  </form>
                </div>
                <hr/>
                
                <div>
                  {{#each this.note}}

                    <h4>{{this.note.title}} - Note Title</h4>
                    <<h5>by {{this.note.author}} - Note author</h5>
                    <p> {{this.note.body}} - Note Body -</p>
                    <br/>

                  {{/each}}
                </div>
                
              {{/with}} 
            </div>
            <div class="modal-footer">
              <a id="saveNote" class="modal-action modal-close waves-effect waves-green btn-flat">Save Note</a>
              <a href="#" class="modal-action modal-close waves-effect waves-green btn-flat">Close</a>
            </div>
          </div>
       
        </div>
      </div>